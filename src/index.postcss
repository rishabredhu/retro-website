/* Responsive Styles */
@media (min-width: 1024px) {
  .parallax__content {
    flex-direction: row;
    text-align: left;
  }
}

html {
  scroll-behavior: smooth;
}

.hero-section {
  position: sticky;
  top: 0;
  z-index: 999; /* Ensure it's above other components */
}

.portfolio {
  transition: opacity 0.5s ease-in-out;
}

body {
  background: linear-gradient(to bottom, #000000, #111111);
}

@keyframes move {
  0% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0); }
}

.animate-move {
  animation: move 2s ease-in-out infinite;
}

@keyframes floatInPlace {
  0%, 100% {
    transform: translateY(-40px) scale(1.2);
  }
  50% {
    transform: translateY(-60px) scale(1.2);
  }
}

@keyframes glitch {
  0% {
    transform: translate(0);
  }
  20% {
    transform: translate(-2px, 2px);
  }
  40% {
    transform: translate(-2px, -2px);
  }
  60% {
    transform: translate(2px, 2px);
  }
  80% {
    transform: translate(2px, -2px);
  }
  100% {
    transform: translate(0);
  }
}

.animate-glitch {
  animation: glitch 0.5s infinite;
}

.shadow-neon {
  box-shadow: 0 0 10px theme('colors.neon-blue'), 0 0 20px theme('colors.neon-blue');
}

.glitch-text {
  position: relative;
  display: inline-block;
}

.glitch-text::before,
.glitch-text::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.glitch-text::before {
  left: 2px;
  text-shadow: -2px 0 theme('colors.neon-pink');
  clip: rect(24px, 550px, 90px, 0);
  animation: glitch-anim 5s infinite linear alternate-reverse;
}

.glitch-text::after {
  left: -2px;
  text-shadow: -2px 0 theme('colors.neon-blue');
  clip: rect(85px, 550px, 140px, 0);
  animation: glitch-anim 4s infinite linear alternate-reverse;
}

@keyframes glitch-anim {
  0% {
    clip: rect(51px, 9999px, 28px, 0);
  }
  5% {
    clip: rect(70px, 9999px, 71px, 0);
  }
  10% {
    clip: rect(92px, 9999px, 100px, 0);
  }
  /* ... add more steps as needed */
  100% {
    clip: rect(48px, 9999px, 67px, 0);
  }
}

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer utilities {
  .animate-glow {
    animation: glow 2s ease-in-out infinite alternate;
  }
  .animate-glitch {
    animation: glitch 1s ease-in-out infinite alternate;
  }
  .animate-blink {
    animation: blink 1s ease-in-out infinite;
  }
}
